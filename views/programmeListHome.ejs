<%- include(partials + "/header") %>
<% let searchUni = universities%>
<div class="jumbotron sized-box">
  <h1>RiDe</h1>
  <h2>Apply Programmes easily with Ricky Delia Student Application System</h2>
  <hr/>
  <p>Add your qualification once, and you are ready to apply for any programs!</p>
  <% if(partials === "partials") { %>
    <p>So what are you waiting? <a href="/register">Register now</a>, its free! </p>
  <% } %>
</div>

<div class="form-inline">
  <input id="search-textfield" type="text" class="form-control bottom-form" placeholder="Seach Keyword">
  <button id="search-button" type="button" class="btn btn-primary bottom-form">Search</button>
  <button id="clear-button" type="button" class="btn btn-secondary bottom-form" onclick="">Clear</button>
</div>

<div class="row">
<% searchUni.forEach((u) => { %>
  <% u.programmes.forEach((p) => { %>
    <div class="col-sm-12 col-md-6">
      <div class="thumbnail">
        <div class="caption">
          <h3><b><%= p.programmeName %></b></h3>
          <h4><%= p.description %></h4>
          <hr/>
          <h4><b>Closing Date</b></h4>
          <h5><%= p.closingDate %></h5>
          <hr/>
          <p class="bottom-form-small">
            <a href="/programmes/<%= u._id %>/apply-for-programme/<%= p._id %>" class="btn btn-primary" role="button">Apply now!</a>
          </p>
        </div>
      </div>
    </div>
  <% }); %>
<% });%>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="/script/programmeListHome.js" charset="utf-8"></script>

<%- include(partials + "/footer") %>
